<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control form-control-lg" name="title" placeholder="Enter a title">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="10" placeholder="Enter your post"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include("partials/footer") -%>